{
  "name": "storagefy",
  "version": "1.0.0",
  "description": "Framework-agnostic adapter system for syncing state libraries (Pinia, Zustand, Redux, Jotai, Svelte, etc.) with browser storage (localStorage, sessionStorage, IndexedDB).",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.js --format esm --dts --minify",
    "test": "vitest --environment happy-dom"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "state-management",
    "localStorage",
    "sessionStorage",
    "indexeddb",
    "pinia",
    "zustand",
    "redux",
    "jotai",
    "svelte",
    "persistence",
    "storage",
    "sync",
    "react",
    "vue",
    "adapter",
    "storagefy"
  ],
  "author": "Arthur Germano https://github.com/arthurgermano",
  "license": "MIT",
  "homepage": "https://github.com/arthurgermano/storagefy",
  "devDependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "fake-indexeddb": "^6.0.0",
    "happy-dom": "^17.4.4",
    "jotai": "^2.12.2",
    "pinia": "^3.0.2",
    "react": "^19.1.0",
    "svelte": "^5.25.12",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vitest": "^3.1.1",
    "zustand": "^5.0.3"
  },
  "dependencies": {
    "misc-helpers": "^1.3.15"
  }
}
